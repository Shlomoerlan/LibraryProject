@model LibraryProject.Models.ShelfModel;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ShelfModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Width)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Width)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LibraryId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LibraryId)
        </dd>
        <dt class="col-sm-2">
            "Books Set:"
        </dt>
        @foreach(var booksSet in Model.BooksSets)
        {
         
            <dd class="col-sm-10">
                @booksSet.SetName
            </dd>
            <dt class="col-sm-2">
                "Books: "
            </dt>
            @foreach (var book in booksSet.Books)
            {

                <dd class="col-sm-10">
                    @book.BookName |
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
