@model LibraryProject.Models.BooksSetModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BooksSetModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShelfId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShelfId)
        </dd>
        <dt class="col-sm-2">

        </dt>
       <div>
           @foreach (var book in Model.Books)
        {

            <dd class="col-sm-10">
                    <h6>Book number: @book.Id</h6>
                    <span>Book name: @book.BookName</span> ,<br /> <span>Book genre: @book.Genre </span> , <br /> <span>Book width: @book.Width</span> , <br /> <span>Book Height: @book.Height </span>
            </dd>
        }
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
